<!doctype html>
<html lang="en">
    <head>
	    <meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	    <link rel="stylesheet" href="{{ settings.STATIC_PREFIX }}/normalize.css">
	    <link rel="stylesheet" href="{{ settings.STATIC_PREFIX }}/styles.css">
	    <title>{% block title %}{% endblock %}</title>
    </head>
    <body>
	    <div id="background">
	        <video autoplay loop poster="{{ settings.STATIC_PREFIX }}/video/poster.jpeg">
		        <source src="{{ settings.STATIC_PREFIX }}/video/space.ogv" type="video/ogg"/>
		        <source src="{{ settings.STATIC_PREFIX }}/video/space.mp4" type="video/mp4"/>
		        <source src="{{ settings.STATIC_PREFIX }}/video/space.webm" type="video/webm"/>
	        </video>
	    </div>
	    <div id="overlay">
	    </div>
	    <div id="root" class="{% block class %}{% endblock %}">
	        {% block root %}<h1>Hello, world!</h1>{% endblock %}
	    </div>
    </body>
</html>
