{% extends "base.jinja2" %}

{% block class %}stream{% endblock %}

{% block root %}
    <h1>socialite Â· stream</h1>
    <form method="POST" action="/stream/">
        <p><textarea placeholder="Expression..." name="expression"></textarea></p>
        <p><input type="submit" value="submit" /></p>
    </form>
    <div class="stream">
        {% for expression in expressions %}
            <div class="expression">
                <!-- <img src="https://picsum.photos/48" /> -->
                <div class="html"><a href="/stream/{{ expression['name'] }}/" class="source">{{ expression['name'] }}</a> {{ expression['html'] | safe }}</div>
                <p class="metadata">
                    <a href="/expression/{{ expression['uid'] }}">{{ expression['modified-at'] | epoch2human }} seconds ago...</a>
                </p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
