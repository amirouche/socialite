{% extends "base.jinja2" %}

{% block class %}stream{% endblock %}

{% block root %}
    <h1>socialiter · {{ username }} · <a href="/stream/{{ username }}/follow">follow</a></h1>
    <div class="stream">
        {% for expression in expressions %}
            <div class="expression">
                <!-- <img src="https://picsum.photos/48" /> -->
                <div class="html"><a href="/stream/{{ username }}/" class="source">{{ username }}</a> {{ expression['html'] | safe }}</div>
                <p class="metadata">
                    <a href="/expression/{{ expression['uid'] }}">{{ expression['modified-at'] | epoch2human }} seconds ago...</a>
                </p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
